datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

enum Role {
  CANDIDATE
  EMPLOYER
}

model User {
  id        Int        @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String     @unique
  role      Role
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  candidate Candidate?
  employer  Employer?
}

model Candidate {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
  // extra velden voor kandidaat
}

model Employer {
  id               Int     @id @default(autoincrement())
  user             User    @relation(fields: [userId], references: [id])
  userId           Int     @unique
  companyName      String
  organizationType String
  industry         String
  position         String
  privacyAccepted  Boolean
  // extra velden voor opdrachtgever
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
